extends ../layouts/common

block content
  h1 
    span Products
  .d-flex.align-items-center
    form.ml-auto(action="/users/search", method="GET" class="d-flex")
      input(type="text", name="q", class="form-control")
      button(class="btn btn-primary ml-2") Search

  .row.pl-3.pr-3
    each product in products
      col-sm-6.col-md-4.col-lg-3
        .card.mb-3
            img.card-img-top(src=product.image)
            .card-body
              h5.card-title= product.name 
              p.card-text= product.description
            .footer.mb-3
              a.btn.btn-primary(href='/cart/add/' + product.id) Add to cart

  .d-flex
    nav.ml-auto(aria-label='Page navigation example')
    ul.pagination
      li.page-item
        a.page-link(href='#', aria-label='Previous')
          span(aria-hidden='true') &laquo;
      li.page-item
        a.page-link(href='?page=1') 1
      li.page-item
        a.page-link(href='?page=2') 2
      li.page-item
        a.page-link(href='?page=3') 3
      li.page-item
        a.page-link(href='#', aria-label='Next')
          span(aria-hidden='true') &raquo;


 
