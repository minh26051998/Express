extends ../layouts/common

block content
	h1 
		span USERS
		a.ml-2.btn.btn-primary(href="/users/create") New

	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method="GET" class="d-flex")
			input(type="text", name="q", class="form-control")
			button(class="btn btn-primary ml-2") Search

	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions
			th 
		each user in users
				tr
					td
						img(src=user.avatar, width="64px")
					td= user.name
					td= user.phone
					td
						a.btn-light(href='/users/' +user.id) View
					td
						a.btn-light(href='#') Delete
